<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal"
        android:layout_weight="0.03">
        <TextView
            android:id="@+id/city"
            android:text="@string/citytext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cityGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton

            android:id="@+id/farmbuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/farmbutton"
            android:onClick="levelUpFarm"
            style="?android:attr/borderlessButtonStyle">
        </ImageButton>

        <TextView
            android:id="@+id/farmprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/tavernbuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tavernbutton"
            android:onClick="levelUpTavern"
            style="?android:attr/borderlessButtonStyle">

        </ImageButton>
        <TextView
            android:id="@+id/tavernprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/librarybuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/librarybutton"
            android:onClick="levelUpLibrary"
            style="?android:attr/borderlessButtonStyle">
        </ImageButton>

        <TextView
            android:id="@+id/libraryprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageButton
            android:id="@+id/barracksbuilding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/barracksbutton"
            android:onClick="levelUpBarracks"
            style="?android:attr/borderlessButtonStyle">

        </ImageButton>

        <TextView
            android:id="@+id/barracksprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>
