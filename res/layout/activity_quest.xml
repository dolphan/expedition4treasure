<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lab.expeditionfortreasure.QuestActivity">

    <TextView
        android:id="@+id/questscreen"
        android:text="@string/questscreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/newquest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/newquest"
        android:onClick="newQuest"/>
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/abortquest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/abortquest"
        android:onClick="abortQuest"/>
    <Button
        style="?android:attr/borderlessButtonStyle"
        android:id="@+id/readquest"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/readquest"
        android:onClick="readQuest"/>


</LinearLayout>
